{% extends 'base.html.twig' %}

{% block title %}Modifier l'image{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Modifier l'image</h1>

        <div class="form-group">
            {{ form_label(form.title, 'Titre') }}
            {{ form_widget(form.title, { 'attr': {'class': 'form-control'} }) }}
        </div>

        <div class="form-group">
            {{ form_label(form.description, 'Description') }}
            {{ form_widget(form.description, { 'attr': {'class': 'form-control'} }) }}
        </div>

        <button type="submit" class="btn btn-secondary">Mettre à jour</button>

        <div class="mt-3">
            <a href="{{ path('app_image_index') }}" class="btn btn-secondary">Retour à la liste</a>
        </div>

        {{ include('image/_delete_form.html.twig') }}
    </div>
{% endblock %}

