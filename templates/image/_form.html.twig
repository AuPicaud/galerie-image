{{ form_start(form) }}

<div class="form-group">
    {{ form_label(form.imageFile, 'Choisir une image') }}
    {{ form_widget(form.imageFile, { 'attr': {'class': 'form-control'} }) }}
</div>

<div class="form-group">
    {{ form_label(form.name, 'Nom de l\'image') }}
    {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
</div>

<div class="form-group">
    {{ form_label(form.description, 'Description de l\'image') }}
    {{ form_widget(form.description, { 'attr': {'class': 'form-control'} }) }}
</div>

<button type="submit" class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>

{{ form_end(form) }}

