{% extends 'base.html.twig' %}

{% block title %}Détails de l'image{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Détails de l'image</h1>

        <table class="table table-bordered">
            <tbody>
            <tr>
                <th scope="row">Image</th>
                <td><img src="{{ asset('images/posts' ~ image.getName()) }}" alt="Image"></td>
            </tr>
            <tr>
                <th scope="row">Nom de l'image</th>
                <td>{{ image.name }}</td>
            </tr>
            <tr>
                <th scope="row">Description de l'image</th>
                <td>{{ image.description }}</td>
            </tr>
            </tbody>
        </table>

        <div class="mt-3">
            <a href="{{ path('app_image_index') }}" class="btn btn-secondary">Retour à la liste</a>
            <a href="{{ path('app_image_edit', {'id': image.id}) }}" class="btn btn-warning">Modifier</a>
        </div>

        {{ include('image/_delete_form.html.twig') }}
    </div>
{% endblock %}

